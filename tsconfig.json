{
  "include": ["packages"],

  "exclude": ["packages/*/src/**/*.test.ts"],

  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
